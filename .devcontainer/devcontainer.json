{
    "name": "Dev Container",
    "image": "mcr.microsoft.com/vscode/devcontainers/base:0.202.6",
    "customizations": {
        "vscode": {
            "extensions": [
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "ritwickdey.LiveServer",
                "jebbs.plantuml",
                "bierner.markdown-mermaid"
            ]
        }
    },
    "postCreateCommand": "sudo apt update && sudo apt install openjdk-17-jdk openjdk-17-jre graphviz -y "
}
